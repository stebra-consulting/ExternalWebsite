@model List<ExternalWebsite2.Models.StebraEntity>

@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Archived News</h1>
    <p class="lead">Introducing our nostalgic archived news</p>
</div>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="container-fluid">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <div class="col-md-12">
                        <h2>@item.Title</h2>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <p><i>@item.Date @Html.Raw(item.Article)</i></p>
                        <p>
                            @Html.Raw(item.Body)
                        </p>
                        <p>@Html.ActionLink("Link to Article", "Nyheter", new { id = UrlManager.MakeURLFriendly(@item.Title) })</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>